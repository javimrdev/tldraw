{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useBlockStatements": "off",
				"useImportType": "warn"
			},
			"nursery": {
				"useSortedClasses": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			}
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"maxSize": 5000000,
		"includes": ["src/**/*"]
	},
	"formatter": {
    "indentStyle": "space",
    "lineWidth": 100 
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  }

}
